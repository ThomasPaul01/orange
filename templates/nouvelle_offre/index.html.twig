{# templates/nouvelle_offre/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter une offre{% endblock %}

{% block header_title %}
    <img src="{{ asset('images/next-talent.png') }}" alt="Logo" onclick="window.location.href='{{ path('app_accueil') }}">
    <h1>Ajouter une nouvelle offre</h1>
{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="my-4">Ajouter une nouvelle offre</h1>

        <form method="post" class="form-group">
            {{ form_start(form) }}

            <div class="mb-3">
                <label for="titre" class="form-label">Titre</label>
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="poste" class="form-label">Poste</label>
                {{ form_widget(form.poste, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="niveauEtude" class="form-label">Niveau d'étude</label>
                {{ form_widget(form.niveauEtude, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="duree" class="form-label">Durée</label>
                {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="attentes" class="form-label">Attentes</label>
                {{ form_widget(form.attentes, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-primary mt-3">Publier l'offre</button>

            {{ form_end(form) }}
        </form>

        <div class="mt-4">
            <a href="{{ path('pme_mes_offres') }}" class="btn btn-link">Retour aux offres</a>
        </div>
    </div>
{% endblock %}
